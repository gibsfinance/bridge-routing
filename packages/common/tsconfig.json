{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "composite": true,
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "moduleDetection": "force",
    "moduleResolution": "nodenext"
  },
  "include": ["src/**/*.ts", "src/**/*.js"]
}
